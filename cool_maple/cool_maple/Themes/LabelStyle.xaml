                <ControlTemplate TargetType="Label">
                    <Grid>
                        <Border/>
                        <Grid>
                            <Border BorderBrush="{TemplateBinding Background}" BorderThickness="1" CornerRadius="10"/>
                            <TextBlock HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Margin="5 5 5 5"
                                       Foreground="White">
                                <Run Text="•REQ "/>
                                <Run Text="{TemplateBinding Tag}"/>
                                <Run Text=" : "/>
                                <Run Text="{TemplateBinding Content}"/>
                            </TextBlock>
                        </Grid>
