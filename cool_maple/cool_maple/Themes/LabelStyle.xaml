        </Setter>
    </Style>

    <Style x:Key="ModalOptionStyle" TargetType="Label">
        <Setter Property="FontFamily" Value="#Maplestory"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Label">
                    <Grid>
                        <Border/>
                        <Grid>
                            <Border BorderBrush="{TemplateBinding Background}" BorderThickness="1" CornerRadius="10"/>
                            <TextBlock HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   Margin="15 2 5 2"
                                   Foreground="White">
                            <Run Text="{TemplateBinding Tag}"/>
                            <Run Text=" : "/>
                            <Run Text="{TemplateBinding Content}"/>
                            </TextBlock>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>